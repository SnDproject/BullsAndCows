doctype
html
    head
        title Playlists
        link(rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.min.css")
        link(rel="stylesheet" href="/css/site.css")
    body
        header.nav
        .container
            .navbar-header
                a.navbar-brand(href="/") Playlists
            .navbar-collapse.collapse
                ul.nav.navbar-nav
                    li
                        a(href="/") Home
                    if (currentUser)
                        li
                            a(href="/playlists/create") Create Playlist
                        li
                            a(href="/playlists/visible") Browse Playlists
                        li
                            a(href="/profile") #{currentUser.email}
                        li
                            a(href="/logout") Logout
                    if (!currentUser)
                        li
                            a(href="/playlists/visible") Browse Playlists
                        li
                            a(href="/register") Register
                        li
                            a(href="/login") Login

        .container
            if (errorMessage)
                .alert.alert-danger #{errorMessage}

            block main-content

        footer.container
            hr
            p.text-center
                | &copy; End to End Javascript 2016 exam

        include scripts
