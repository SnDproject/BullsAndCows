extends ../shared/layout

block main-content
    h1 User: #{user.email}
    h2 User rating: #{user.rating || 0}
    form(method="post")

        label(for="password") Password
        input(id="password" class="form-control" type="password" name="password" placeholder="Change password")
        br
        label(for="confirm-password") Confirm Password
        input(id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm new password")
        br
        label(for="first-name") First Name
        input(id="first-name" class="form-control" type="text" name="firstName" placeholder=user.firstName)
        br
        label(for="last-name") Last Name
        input(id="last-name" class="form-control" type="text" name="lastName" placeholder=user.lastName)
        br
        label(for="avatar") Avatar
        input(id="avatar" class="form-control" type="text" name="avatar" placeholder=user.avatar)
        br
        label(for="youtube") Youtube
        input(id="youtube" class="form-control" type="text" name="youtube" placeholder=user.youtube || none)
        br
        label(for="facebook") Facebook
        input(id="facebook" class="form-control" type="text" name="facebook" placeholder=user.facebook || none)
        br
        input(type="submit" class="btn btn-lg" value="Update")
